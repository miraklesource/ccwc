---
# options: https://clang.llvm.org/docs/ClangFormatStyleOptions.html
BasedOnStyle: LLVM
IndentWidth: 4
# Must be 120 characters or less!
ColumnLimit: 120
# does (int) x instead of (int)x
SpaceAfterCStyleCast: true
# spaces, not tabs!
UseTab: Never
AlignTrailingComments: true
# nicer macros
AlignConsecutiveMacros: true
SpacesBeforeTrailingComments: 3
# use \n instead of \r\n
UseCRLF: false
# nicer enums
AllowShortEnumsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Empty
# if (x) doStuff()  is not allowed, bad style
AllowShortIfStatementsOnASingleLine: false
# char* instead of char *
PointerAlignment: Left

# Nice formatting for struct initialization
BreakConstructorInitializersStyle: BeforeComma
ConstructorInitializerAllOnOneLineOrOnePerLine: false